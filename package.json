{
  "name": "micromessaging",
  "version": "3.0.15",
  "repository": {
    "type": "git",
    "url": "https://github.com/swanest/micromessaging"
  },
  "description": "Easy-to-use interface for Rabbit MQ",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "mocha --opts ./src/tests/mocha.opts ./src/tests/*.ts",
    "test:debug": "DEBUG=micromessaging mocha --opts ./src/tests/mocha.opts ./src/tests/*.ts",
    "watch": "nodemon -e ts,json --exec 'node --inspect=5858 node_modules/mocha/bin/mocha --compilers ts:ts-node/register \"src/tests/*.ts\"'",
    "build": "rm -rf dist && tsc && rm -rf ./dist/tests",
    "docs": "rm -rf docs && typedoc --out docs src --mode modules --excludePrivate --exclude \"**/tests/*.ts\" --target ES6 && touch docs/.nojekyll",
    "coverage": "nyc -e '.ts' --r html -r lcov -r text npm run test",
    "prepublish": "yarn build",
    "benchmark": "cd benchmark/ && ts-node Benchmark.ts"
  },
  "author": "Swanest",
  "files": [
    "dist/"
  ],
  "license": "MIT",
  "homepage": "https://github.com/swanest/micromessaging#readme",
  "dependencies": {
    "@types/amqplib": "^0.5.4",
    "@types/hoek": "^4.1.3",
    "@types/lodash": "^4.14.72",
    "@types/node": "^8.0.19",
    "@types/uuid": "^3.4.0",
    "@types/when": "^2.4.29",
    "amqplib": "^0.5.1",
    "hoek": "^4.2.0",
    "lodash": "^4.17.4",
    "sw-logger": "^1.2.3",
    "uuid": "^3.1.0",
    "when": "^3.7.8"
  },
  "devDependencies": {
    "@types/chai": "^4.0.2",
    "@types/mocha": "^2.2.41",
    "chai": "^4.1.1",
    "mocha": "^3.5.0",
    "mocha-clean": "^1.0.0",
    "nyc": "^11.1.0",
    "ts-node": "^3.3.0",
    "typedoc": "^0.8.0",
    "typescript": "^2.4.2"
  }
}
